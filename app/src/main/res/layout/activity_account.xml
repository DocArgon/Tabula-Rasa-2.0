<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

	<TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDCBCB"
        android:paddingBottom="5dp"
        android:singleLine="false"
        android:text="Moje konto"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@android:drawable/btn_star_big_on"
        />

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/constraintLayout2"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginStart="60dp"
		android:layout_marginEnd="60dp"
		android:background="#F3EDED"
		android:fadingEdge="horizontal|vertical"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/profilePicture"
		>

		<Button
			android:id="@+id/editInfo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Edycja danych"
			android:textSize="24sp"
			app:layout_constraintBottom_toTopOf="@+id/startConversation"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			/>

		<Button
			android:id="@+id/startConversation"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Rozpocznij konwersację"
			android:textSize="24sp"
			app:layout_constraintBottom_toTopOf="@+id/mySharedBooks"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/editInfo"
			/>

		<Button
			android:id="@+id/mySharedBooks"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Moje udostępnione książki"
			android:textSize="24sp"
			app:layout_constraintBottom_toTopOf="@+id/myFavouriteBooks"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/startConversation"
			/>

		<Button
			android:id="@+id/myFavouriteBooks"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Moja lista ulubionych"
			android:textSize="24sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/mySharedBooks"
			/>

	</androidx.constraintlayout.widget.ConstraintLayout>

	<Button
		android:id="@+id/back"
		android:layout_width="109dp"
		android:layout_height="68dp"
		android:text="Wstecz"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		/>

</androidx.constraintlayout.widget.ConstraintLayout>